# Storj Configuration
STORJ_ACCESS_KEY=
STORJ_SECRET_KEY=
STORJ_BUCKET_URL=

# Redis Proxy Configuration
PROXY_PASSWORD=your-secure-proxy-password
PROXY_PORT=6379
# PROXY_HOST: Use "::" for IPv6 dual-stack (supports both IPv4 and IPv6)
#             Use "0.0.0.0" for IPv4 only
PROXY_HOST=::
# PROXY_IPV6: Enable IPv6 dual-stack mode (true/false)
PROXY_IPV6=true

# Redis Upstream Configuration (use either REDIS_URL or individual settings)
REDIS_URL=redis://username:password@host:port
# OR use individual settings:
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_USERNAME=your-redis-username
# REDIS_PASSWORD=your-redis-password

# Redis Connection Pool Configuration
REDIS_POOL_SIZE=1000
REDIS_POOL_TIMEOUT=30
REDIS_POOL_KEEPALIVE=true
REDIS_POOL_KEEPALIVE_IDLE=1
REDIS_POOL_KEEPALIVE_INTERVAL=3
REDIS_POOL_KEEPALIVE_COUNT=5
REDIS_POOL_PREWARM=50

# Logging Configuration
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
